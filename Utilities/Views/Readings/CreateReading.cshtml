@model Utilities.Models.Reading

@{
    ViewData["Title"] = "CreateReading";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateReading</h2>

<h4>Reading</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateReading">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenantId" class="control-label"></label>
                <select asp-for="TenantId" class="form-control" asp-items="ViewBag.TenantId">
                    <option>Выберите фамилию квартиросъёмщика</option>
                </select>
                <span asp-validation-for="TenantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apartmentnumber" class="control-label"></label>
                <input asp-for="Apartmentnumber" class="form-control" />
                <span asp-validation-for="Apartmentnumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RateId" class="control-label"></label>
                <select asp-for="RateId" class="form-control" asp-items="ViewBag.RateId" >
                    <option>Выберите тип счётчика</option>
                </select>
                <span asp-validation-for="RateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CounterNumber" class="control-label"></label>
                <input asp-for="CounterNumber" class="form-control" />
                <span asp-validation-for="CounterNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Indications" class="control-label"></label>
                <input asp-for="Indications" class="form-control" />
                <span asp-validation-for="Indications" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfReading" class="control-label"></label>
                <input asp-for="DateOfReading" class="form-control" />
                <span asp-validation-for="DateOfReading" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-cacheKey="ReadingsCache">Back to List</a>
</div>

